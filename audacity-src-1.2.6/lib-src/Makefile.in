
all: @BUILDLIBS@

allegro/allegro.a:
	cd allegro && $(MAKE)

dlcompat/libdl.a:
	cd dlcompat && $(MAKE)

expat/expat.a:
	cd expat && $(MAKE)

libogg/src/.libs/libogg.a:
	cd libogg && $(MAKE)

libvorbis/lib/.libs/libvorbis.a: libogg/src/.libs/libogg.a
	cd libvorbis && $(MAKE)

libvorbis/lib/.libs/libvorbisfile.a: libogg/src/.libs/libogg.a
	cd libvorbis && $(MAKE)

libvorbis/lib/.libs/libvorbisenc.a: libogg/src/.libs/libogg.a
	cd libvorbis && $(MAKE)

libnyquist/libnyquist.a:
	cd libnyquist && $(MAKE)

libmad/.libs/libmad.a:
	cd libmad && $(MAKE)

libid3tag/.libs/libid3tag.a:
	cd libid3tag && $(MAKE)

libmad/mad.h: libmad/.libs/libmad.a

libsamplerate/src/.libs/libsamplerate.a:
	cd libsamplerate && $(MAKE)

libresample/libresample.a:
	cd libresample && $(MAKE)

libflac/src/libFLAC/.libs/libFLAC.a:
	cd libflac && $(MAKE)

libflac/src/libFLAC++/.libs/libFLAC++.a:
	cd libflac && $(MAKE)

libsndfile/src/.libs/libsndfile.a:
	cd libsndfile && $(MAKE) -C src

portaudio/pa_unix_oss/portaudio.a:
	cd portaudio/pa_unix_oss && $(MAKE)

portaudio-v19/lib/libportaudio.a:
	cd portaudio-v19 && $(MAKE)

portaudio/pa_win_wmme/portaudio.a:
